<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="content-type" content="text/html; charset=UTF-8">

<title>Firebase - Todo</title>

<% include ../partials/header.ejs %>

<!-- AngularJS -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>

<!-- Firebase -->
<script src="https://cdn.firebase.com/js/client/2.2.4/firebase.js"></script>

<!-- AngularFire -->
<script src="https://cdn.firebase.com/libs/angularfire/1.1.2/angularfire.min.js"></script>

<!-- AngularJS app -->
<script src="../pages/firebase/lib/app.js"></script>

<script src="../pages/firebase/lib/classie.js"></script>
<script src="../pages/firebase/lib/selectFx.js"></script>

</head>
<body>

<% include ../partials/menu.ejs %>

<div ng-app="TodoApp" ng-controller="mainController">
  
	<div class="container" id="main">
	
	  <div class="row">
		  <div class="col-md-12">
			  <h1>Firebase - Todos</h1>
		  </div>
	  </div>

	  <div class="row">
		  <div class="col-md-4 col-sm-6">
			  <div class="panel panel-default">
				  <div class="panel-body">
					  <div class="row">
					  <form novalidate class="simple-form">
						  <div class="col-md-12">
							<div class="header flex">
							   <span>Description</span>
							   <input class="description" name="description" type="text" ng-model="item.description">
							   <div class="pull-right">
								   <span>Status</span>
									<select name="singleSelect" ng-model="item.status">
										<option value='todo'>To do</option>
										<option value='doing'>Doing</option>
										<option value='done'>Done</option>			      					     					
									</select>		
								</div>
							</div>
							<div class="clearfix"></div>
							</div>
							<div class="col-md-12">	
								<span>Responsible</span>
								<input class="responsible" name="responsible" type="text" ng-model="item.responsible">
							</div>
							<div class="col-md-12">									
								<span>Obs</span>
								<input class="obs" name="obs" type="text" ng-model="item.obs">
							</div>								
							<div class="col-md-6">
							  <a href="#" class="btn btn-warning" ng-click="actAdd( $event, item )">Add</a>
							</div>
						  </div>
					  </form>
					  </div>
				   </div>	 	    		      
			   </div>

	    
	    <div class="col-md-4 col-sm-6" ng-repeat="(id, item) in task">
	      
		      <div class="panel panel-default">
			     
				  <div class="panel-body">			  	  
					    
				      <div class="row">
					      <div class="col-md-12">
					      	<div class="header flex">
							   <span>Description</span>							
							   <input class="description" name="description" type="text" ng-model="item.description" ng-change="item.$save()">
							   <div class="pull-right">
									<span>Status</span>
									<select class="pull-right" name="singleSelect" ng-model="item.status">
										<option value='todo'>To do</option>
										<option value='doing'>Doing</option>
										<option value='done'>Done</option>			      					     					
									</select>						      		
								</div>
					      	</div>							  
			      				<div class="clearfix"></div>
							</div>
							<div class="col-md-12">
							    <span>Responsible</span>
								<input class="responsible" name="responsible" type="text" ng-model="item.responsible" ng-change="item.$save()">
						     </div>
							<div class="col-md-12">
							    <span>Obs</span>
			      				<input class="obs" name="obs" type="text" ng-model="item.obs" ng-change="item.$save()">
							</div>								
						  <div class="col-md-6">
					      	  <a href="#" class="btn btn-warning" ng-click="actDelete( $event, id )">Delete</a>
						  </div>						  
					  </div>
				   </div>	 	    		      
		      </div>
	      
	    </div>       
	      
	  </div>
	   
	</div>
</div>

<!-- Personal script for design -->
<script src="../pages/firebase/lib/scripts.js"></script>



</body>
</html>